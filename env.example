# Configurações do Banco de Dados
DB_HOST=localhost
DB_DATABASE=escopo_seo
DB_USERNAME=root
DB_PASSWORD=

# Configurações da Aplicação
APP_NAME="EscopoSEO"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Configurações de Crawler
CRAWLER_USER_AGENT="EscopoSEO Bot 1.0"
CRAWLER_DELAY=1
CRAWLER_TIMEOUT=30
CRAWLER_MAX_REDIRECTS=5

# Configurações de Limites
MAX_PAGES_DEFAULT=100
MAX_PAGES_LIMIT=1000
MAX_CONCURRENT_REQUESTS=5

# Configurações de Cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de Email (para relatórios)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="EscopoSEO"
